let countFunction = (a) => {
  even = 0
  odd = 0
  zero = 0
  for (i = 0; i < a.length; i++) {
    if (typeof a[i] !== 'number') {
      continue;
    }
    if (isNaN(a[i])) {
      continue;
    }
    
    if (a[i] == 0) {
      zero++;
      continue;
    } 
    
    if (a[i] % 2 == 0) {
      even++;
    }
    
    if (a[i] % 2 == 1) {
      odd++;
    }
  }
  return [even, odd, zero];
}
module.exports = countFunction;
