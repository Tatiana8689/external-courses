function countFunction(array) {
  even = 0
  odd = 0
  zero = 0
  for (i = 0; i < array.length; i++) {
    if (typeof array[i] !== 'number') {
      continue;
    }
    if (isNaN(array[i])) {
      continue;
    }
    
    if (array[i] == 0) {
      zero++;
      continue;
    } 
    
    if (array[i] % 2 == 0) {
      even++;
    }
    
    if (array[i] % 2 == 1) {
      odd++;
    }
  }
  return [even, odd, zero];
}
module.exports = countFunction;
